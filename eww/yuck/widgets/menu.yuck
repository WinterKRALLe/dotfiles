(defwidget menu_item [action label ?class]
  (box
    :class "not ${class}"
    (eventbox
      :class "item"
      :cursor "pointer"
      :timeout 30000
      :onclick "eww close menu; eww close menu-closer; eww update open_menu=false && ${action} &"
      
      (label :xalign 0 :text label)
    )
  )
)

(defwidget menu_separator []
  (box
    :height 1
    :class "separator"
  )
)